<div id="fullpage">
	<div class="section " id="section0">
		<div class="intro">
			<h1 style="color:#fff;"> Portfolio by k352ex</h1>
			<p>Hello. Welcome to My Page </p>
		</div>
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<a href="http://localhost:3000/index/main", id="intro"> Portfolio </a>
				<%= link_to "Portfolio", "index/main", id: "intro" %>
			</div>
		</div>
	</div>
	<div class="section" id="section1">
	    <div class="slide" id="slide1">
			<div class="intro">
				<h1>Clickable</h1>
				<p>
					You can even click on the navigation and jump directly to another section.
				</p>
			</div>
		</div>

	    <div class="slide" id="slide2">
			<h1>Slide 2</h1>
		</div>

	</div>
	<div class="section" id="section2">
		<div class="intro">
			<h2 style="color:white;"> 군 제대 </h2>
            <%= render "index/countdown" %>
		</div>
	</div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#fullpage').fullpage({
            anchors: ['firstPage', 'secondPage', '3rdPage'],
            sectionsColor: ['#3db5cb', '#DE564B', '#702ec3'],
            slidesNavigation: true,
			scrollOverflow: false,
			scrollBar: true,
			css3: true
        });
    });

	$('#intro').Click(function() {
	});
</script>
